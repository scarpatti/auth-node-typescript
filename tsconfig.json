{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules/*", "**/*.test.ts"]
  }
